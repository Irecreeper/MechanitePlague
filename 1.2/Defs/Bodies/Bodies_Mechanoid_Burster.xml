<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <BodyDef>
        <defName>MP_Burster</defName>
        <label>burster</label>
        <corePart>
            <def>MP_MechanicalSpiderBase</def>
            <height>Middle</height>
            <depth>Outside</depth>
            <groups>
                <li>HeadAttackTool</li>
            </groups>
            <parts>
            
                <!-- Abdomen / Head -->
            
                <li>
                    <def>MP_MechanicalAbdomen</def>
                    <height>Middle</height>
                    <coverage>0.2</coverage>
                    <parts>
                        <li>
                            <def>Reactor</def>
                            <coverage>0.2</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>FluidReprocessor</def>
                            <coverage>0.1</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>FluidReprocessor</def>
                            <coverage>0.1</coverage>
                            <depth>Inside</depth>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalSpiderHead</def>
                    <height>Middle</height>
                    <coverage>0.2</coverage>
                    <parts>
                        <li>
                            <def>ArtificialBrain</def>
                            <coverage>0.1</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>first left sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>second left sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>third left sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>fourth left sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>first right sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>second right sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>third right sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SightSensor</def>
                            <customLabel>fourth right sight sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>HearingSensor</def>
                            <customLabel>left hearing sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>HearingSensor</def>
                            <customLabel>right hearing sensor</customLabel>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>SmellSensor</def>
                            <coverage>0.05</coverage>
                        </li>
                        <li>
                            <def>MP_MechanicalFang</def>
                            <coverage>0.15</coverage>
                            <groups>
                                <li>Teeth</li>
                            </groups>
                        </li>
                    </parts>
                </li> 
                
                <!-- Tendrils -->
                
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>front left tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>front left grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>middle left tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>middle left grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>rear left tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>rear left grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>front right tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>front right grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>middle right tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>middle right grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MP_MechanicalTendril</def>
                    <customLabel>rear right tendril</customLabel>
                    <coverage>0.05</coverage>
                    <parts>
                        <li>
                            <def>MP_MechanicalGrasper</def>
                            <customLabel>rear right grasper</customLabel>
                            <coverage>0.2</coverage>
                        </li>
                    </parts>
                </li>
            </parts>
        </corePart>
    </BodyDef>
</Defs>